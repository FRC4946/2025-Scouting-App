<!-- res/layout/activity_main.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/inverted_teleop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_4" >

        <Button
            android:id="@+id/inverted_teleop_exit_screen"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:text="exit match"
            android:layout_marginLeft="880dp"
            android:textStyle="bold"
            android:layout_marginTop="437dp"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:layout_width="144dp"
            android:text="defence mode"
            android:id="@+id/defencemode"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginTop="437dp"
            android:textStyle="bold"
            android:layout_height="100dp"/>
        <CheckBox
            android:layout_width="144dp"
            android:layout_marginTop="437dp"
            android:text="Disabled during match"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="150dp"
            android:layout_height="100dp"
            android:id="@+id/disabledCheckbox2"/>
        <TextView
            android:layout_width="144dp"
            android:text="Passed"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginTop="387dp"
            android:layout_marginLeft="300dp"
            android:textSize="30dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/passed2"
            android:layout_width="144dp"
            android:layout_marginTop="437dp"
            android:text=""
            android:layout_marginStart="300dp"
            android:layout_height="100dp"/>
        <CheckBox
            android:id="@+id/deletemodepassed2"
            android:layout_width="144dp"
            android:layout_marginTop="434dp"
            android:layout_marginStart="450dp"
            android:text="Delete"
            android:textSize="25dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="100dp"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
