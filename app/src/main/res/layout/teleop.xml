<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/teleop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/crescendo_field_picture"
        android:clickable="true"
        android:focusable="true"
        >

        <Button
            android:id="@+id/teleop_exit_screen"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:text="Exit Match"
            android:layout_marginLeft="880dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />
        <Button
            android:layout_width="144dp"
            android:text="defence mode"
            android:textSize="25dp"
            android:id="@+id/defencemode"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_height="100dp"/>
        <CheckBox
            android:id="@+id/disabledCheckbox"
            android:layout_width="144dp"
            android:text="Disabled during match"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="150dp"
            android:layout_height="100dp"/>
        <TextView
            android:layout_width="144dp"
            android:text="Passed"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginLeft="300dp"
            android:textSize="30dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/passed"
            android:layout_width="144dp"
            android:layout_marginTop="50dp"
            android:text=""
            android:layout_marginStart="300dp"
            android:layout_height="100dp"/>
        <CheckBox
            android:layout_width="144dp"
            android:layout_marginStart="450dp"
            android:text="Delete"
            android:textSize="25dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="100dp"
            android:id="@+id/deletemodepassed"/>



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
