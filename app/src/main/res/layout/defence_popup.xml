<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Defence"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/teamnumber1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:hint="place holder for a team"
            android:textAlignment="center"
            android:textSize="30sp" />
        <ToggleButton
            android:id="@+id/opponent1"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/resetOpponent1"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:background="@drawable/restart_button"
            android:layout_height="match_parent"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/teamnumber2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:hint="place holder for a team"
            android:textAlignment="center"
            android:textSize="30sp" />
        <ToggleButton
            android:id="@+id/opponent2"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/resetOpponent2"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:background="@drawable/restart_button"
            android:layout_height="match_parent"/>



    </LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_weight="1"
android:orientation="horizontal">

<EditText
    android:id="@+id/teamnumber3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:textStyle="bold"
    android:hint="place holder for a team"
    android:textAlignment="center"
    android:textSize="30sp" />
<ToggleButton
    android:id="@+id/opponent3"
    android:layout_width="match_parent"
    android:layout_weight="2"
    android:textSize="20dp"
    android:textStyle="bold"
    android:layout_height="match_parent"/>
<Button
    android:id="@+id/resetOpponent3"
    android:layout_width="match_parent"
    android:layout_weight="3"
    android:background="@drawable/restart_button"
    android:layout_height="match_parent"/>



</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/defenceExitButton"
            android:layout_width="match_parent"
            android:text="Exit"
            android:textSize="40sp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>