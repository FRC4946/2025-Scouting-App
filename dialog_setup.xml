<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/setupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:gravity="center"
        android:text="Setup"
        android:textColor="@color/iconColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <EditText
        android:id="@+id/scoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:ems="30"
        android:textColor="@color/iconColor"
        android:hint="Scout name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/matchNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="30"
        android:hint="Match number"
        android:inputType="number"
        android:textColor="@color/iconColor"
        android:textSize="30sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/teamNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/iconColor"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:ems="30"
        android:hint="Team number"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/blueTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:textSize="40sp"
            android:textAlignment="center"
            android:background="@color/buttonSelectedColor"
            android:text="Blue"
            android:textColor="@color/blueTeam" />

        <Button
            android:id="@+id/redTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:textSize="40sp"
            android:textAlignment="center"
            android:background="@color/buttonSelectedColor"
            android:text="Red"
            android:textColor="@color/redTeam" />
    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textColor="@color/iconColor"
        android:textAlignment="center"
        android:text="start" />

</LinearLayout>
